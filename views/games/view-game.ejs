<!doctype html>
<html>
    <head>
        <title>Games Library</title>
        <link
            href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css"
            rel="stylesheet"
            integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN"
            crossorigin="anonymous"
        />
    </head>
    <body>
        <div class="container w-50">
            <h1 class="mb-2"><%= game.title %></h1>
            <a href="/games/<%= game.id %>/edit" class="btn btn-info"
                >Edit Game</a
            >
            <form
                action="/games/<%= game.id %>?_method=DELETE"
                method="post"
                class="d-inline"
                onsubmit="return confirm('Delete game?');"
            >
                <button type="submit" class="btn btn-danger">
                    Delete Game
                </button>
            </form>
            <a href="/" class="btn btn-secondary">Go Back</a>
            <div class="card-subtitle text-muted mb-2 mt-2">
                <%= category.title %> - <%= game.price %> $
            </div>
            <div class="mb-2"><%= game.description%></div>
        </div>
    </body>
</html>
